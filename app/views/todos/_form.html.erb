<%if @todo.errors.present? %>
  <ul>
    <%@todo.errors.each do |error,message| %>
      <li> <%= "#{error.capitalize}  #{message}" %> </li>
    <%end%>
  </ul>
<%end%>
<%= render :partial=> "title"%>
<div class="form container input">

  <%=form_for @todo do |f|%>

  <div class="form-group">
    <%=f.label :customer ,'Customer'%>
    <%=f.text_field :customer ,class:"form-control size"%>
  </div>

  <div class="form-group">
    <%=f.label :date ,'Date'%>
    <%=f.date_select :date ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%=f.label :note ,'Note'%>
    <%=f.text_area :note ,class:"form-control size"%>
  </div>
  <div class="form-group">
    <%=f.label :name ,'Member'%>
    <%=f.text_field :name ,class:"form-control size"%>
  </div>
  <%=f.submit 'Create',class:"btn btn-primary b-size"%>
  <%=link_to todos_url do%>
    <button type="button" class="btn btn-default b-size">Back</button>
  <%end%>
<%end%>
</div>
